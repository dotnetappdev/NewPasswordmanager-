<Window x:Class="PasswordManager.UI.Views.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" 
        Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Border Style="{StaticResource Card}" Margin="20">
            <StackPanel>
                <TextBlock Text="Settings" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Margin="0,0,0,30"/>

                <!-- Account Information -->
                <TextBlock Text="Account Information" 
                          FontSize="18" 
                          FontWeight="SemiBold" 
                          Margin="0,0,0,15"/>
                
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Username:" FontWeight="SemiBold" Margin="0,0,15,10"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="UsernameText" Margin="0,0,0,10"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Account Type:" FontWeight="SemiBold" Margin="0,0,15,10"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="RoleText" Margin="0,0,0,10"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Created:" FontWeight="SemiBold" Margin="0,0,15,10"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="CreatedText" Margin="0,0,0,10"/>
                </Grid>

                <Separator Margin="0,0,0,20"/>

                <!-- Change Password -->
                <TextBlock Text="Change Password" 
                          FontSize="18" 
                          FontWeight="SemiBold" 
                          Margin="0,0,0,15"/>

                <TextBlock Text="Current Password" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <PasswordBox x:Name="CurrentPasswordBox" 
                            Style="{StaticResource ModernPasswordBox}"
                            Margin="0,0,0,15"/>

                <TextBlock Text="New Password" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <PasswordBox x:Name="NewPasswordBox" 
                            Style="{StaticResource ModernPasswordBox}"
                            Margin="0,0,0,15"/>

                <TextBlock Text="Confirm New Password" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <PasswordBox x:Name="ConfirmPasswordBox" 
                            Style="{StaticResource ModernPasswordBox}"
                            Margin="0,0,0,15"/>

                <Button Content="Update Password" 
                       Style="{StaticResource PrimaryButton}"
                       Click="UpdatePasswordButton_Click"
                       HorizontalAlignment="Left"
                       Margin="0,0,0,20"/>

                <Separator Margin="0,0,0,20"/>

                <!-- Theme Settings -->
                <TextBlock Text="Appearance" 
                          FontSize="18" 
                          FontWeight="SemiBold" 
                          Margin="0,0,0,15"/>

                <TextBlock Text="Theme" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <ComboBox x:Name="ThemeComboBox"
                         Style="{StaticResource ModernComboBox}"
                         SelectionChanged="ThemeComboBox_SelectionChanged"
                         Margin="0,0,0,20"/>

                <Separator Margin="0,0,0,20"/>

                <!-- Database Info -->
                <TextBlock Text="Database Information" 
                          FontSize="18" 
                          FontWeight="SemiBold" 
                          Margin="0,0,0,15"/>

                <TextBlock x:Name="DatabasePathText" 
                          TextWrapping="Wrap"
                          Foreground="{StaticResource SecondaryBrush}"
                          Margin="0,0,0,20"/>

                <!-- Error/Success Message -->
                <TextBlock x:Name="MessageText" 
                          TextWrapping="Wrap"
                          Margin="0,0,0,15"
                          Visibility="Collapsed"/>

                <!-- Close Button -->
                <Button Content="Close" 
                       Style="{StaticResource SecondaryButton}"
                       Click="CloseButton_Click"
                       HorizontalAlignment="Right"/>
            </StackPanel>
        </Border>
    </ScrollViewer>
</Window>
