<Window x:Class="PasswordManager.UI.Views.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Height="560" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource DetailPaneBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24">

            <TextBlock Text="Settings"
                       FontSize="24" FontWeight="Bold"
                       Foreground="{StaticResource TextBrush}"
                       Margin="0,0,0,24"/>

            <!-- Account section -->
            <Border Style="{StaticResource Card}" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="ACCOUNT INFORMATION"
                               FontSize="11" FontWeight="SemiBold"
                               Foreground="{StaticResource SecondaryBrush}"
                               Margin="0,0,0,12"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   Text="Username"
                                   FontSize="13" FontWeight="SemiBold"
                                   Foreground="{StaticResource SecondaryBrush}"
                                   Margin="0,0,0,10"/>
                        <TextBlock Grid.Row="0" Grid.Column="1"
                                   x:Name="UsernameText"
                                   FontSize="13"
                                   Foreground="{StaticResource TextBrush}"
                                   Margin="0,0,0,10"/>

                        <TextBlock Grid.Row="1" Grid.Column="0"
                                   Text="Account Type"
                                   FontSize="13" FontWeight="SemiBold"
                                   Foreground="{StaticResource SecondaryBrush}"
                                   Margin="0,0,0,10"/>
                        <TextBlock Grid.Row="1" Grid.Column="1"
                                   x:Name="RoleText"
                                   FontSize="13"
                                   Foreground="{StaticResource TextBrush}"
                                   Margin="0,0,0,10"/>

                        <TextBlock Grid.Row="2" Grid.Column="0"
                                   Text="Created"
                                   FontSize="13" FontWeight="SemiBold"
                                   Foreground="{StaticResource SecondaryBrush}"/>
                        <TextBlock Grid.Row="2" Grid.Column="1"
                                   x:Name="CreatedText"
                                   FontSize="13"
                                   Foreground="{StaticResource TextBrush}"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Change password section -->
            <Border Style="{StaticResource Card}" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="CHANGE PASSWORD"
                               FontSize="11" FontWeight="SemiBold"
                               Foreground="{StaticResource SecondaryBrush}"
                               Margin="0,0,0,12"/>

                    <TextBlock Text="Current Password"
                               FontSize="13" FontWeight="SemiBold"
                               Foreground="{StaticResource TextBrush}"
                               Margin="0,0,0,6"/>
                    <PasswordBox x:Name="CurrentPasswordBox"
                                 Style="{StaticResource ModernPasswordBox}"
                                 Margin="0,0,0,14"/>

                    <TextBlock Text="New Password"
                               FontSize="13" FontWeight="SemiBold"
                               Foreground="{StaticResource TextBrush}"
                               Margin="0,0,0,6"/>
                    <PasswordBox x:Name="NewPasswordBox"
                                 Style="{StaticResource ModernPasswordBox}"
                                 Margin="0,0,0,14"/>

                    <TextBlock Text="Confirm New Password"
                               FontSize="13" FontWeight="SemiBold"
                               Foreground="{StaticResource TextBrush}"
                               Margin="0,0,0,6"/>
                    <PasswordBox x:Name="ConfirmPasswordBox"
                                 Style="{StaticResource ModernPasswordBox}"
                                 Margin="0,0,0,16"/>

                    <Button Content="Update Password"
                            Style="{StaticResource PrimaryButton}"
                            Click="UpdatePasswordButton_Click"
                            HorizontalAlignment="Left"/>
                </StackPanel>
            </Border>

            <!-- Appearance section -->
            <Border Style="{StaticResource Card}" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="APPEARANCE"
                               FontSize="11" FontWeight="SemiBold"
                               Foreground="{StaticResource SecondaryBrush}"
                               Margin="0,0,0,12"/>

                    <TextBlock Text="Theme"
                               FontSize="13" FontWeight="SemiBold"
                               Foreground="{StaticResource TextBrush}"
                               Margin="0,0,0,6"/>
                    <ComboBox x:Name="ThemeComboBox"
                              Style="{StaticResource ModernComboBox}"
                              SelectionChanged="ThemeComboBox_SelectionChanged"/>
                </StackPanel>
            </Border>

            <!-- Database section -->
            <Border Style="{StaticResource Card}" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="DATABASE"
                               FontSize="11" FontWeight="SemiBold"
                               Foreground="{StaticResource SecondaryBrush}"
                               Margin="0,0,0,8"/>
                    <TextBlock x:Name="DatabasePathText"
                               TextWrapping="Wrap"
                               FontSize="13"
                               Foreground="{StaticResource SecondaryBrush}"/>
                </StackPanel>
            </Border>

            <!-- Status message -->
            <TextBlock x:Name="MessageText"
                       TextWrapping="Wrap"
                       FontSize="13"
                       Margin="0,0,0,16"
                       Visibility="Collapsed"/>

            <!-- Close button -->
            <Button Content="Close"
                    Style="{StaticResource SecondaryButton}"
                    Click="CloseButton_Click"
                    HorizontalAlignment="Right"/>
        </StackPanel>
    </ScrollViewer>
</Window>
