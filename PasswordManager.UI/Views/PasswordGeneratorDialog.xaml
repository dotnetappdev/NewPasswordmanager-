<Window x:Class="PasswordManager.UI.Views.PasswordGeneratorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Password Generator" 
        Height="450" Width="450"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}">
    
    <Border Style="{StaticResource Card}" Margin="20">
        <StackPanel>
            <TextBlock Text="Password Generator" 
                      FontSize="20" 
                      FontWeight="Bold" 
                      Margin="0,0,0,20"/>

            <!-- Generated Password Display -->
            <Border BorderBrush="{StaticResource BorderBrush}" 
                    BorderThickness="1" 
                    CornerRadius="6"
                    Padding="12"
                    Margin="0,0,0,15">
                <TextBlock x:Name="GeneratedPasswordText" 
                          FontFamily="Consolas"
                          FontSize="16"
                          TextWrapping="Wrap"/>
            </Border>

            <!-- Password Length -->
            <TextBlock Text="Password Length" FontWeight="SemiBold" Margin="0,0,0,8"/>
            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Slider x:Name="LengthSlider" 
                       Grid.Column="0"
                       Minimum="8" 
                       Maximum="64" 
                       Value="16"
                       TickFrequency="1"
                       IsSnapToTickEnabled="True"
                       ValueChanged="LengthSlider_ValueChanged"/>
                <TextBlock Grid.Column="1" 
                          Text="{Binding ElementName=LengthSlider, Path=Value}"
                          Margin="10,0,0,0"
                          VerticalAlignment="Center"/>
            </Grid>

            <!-- Options -->
            <CheckBox x:Name="UppercaseCheckBox" 
                     Content="Include Uppercase (A-Z)" 
                     IsChecked="True"
                     Margin="0,0,0,10"/>
            <CheckBox x:Name="LowercaseCheckBox" 
                     Content="Include Lowercase (a-z)" 
                     IsChecked="True"
                     Margin="0,0,0,10"/>
            <CheckBox x:Name="NumbersCheckBox" 
                     Content="Include Numbers (0-9)" 
                     IsChecked="True"
                     Margin="0,0,0,10"/>
            <CheckBox x:Name="SpecialCharsCheckBox" 
                     Content="Include Special Characters (!@#$...)" 
                     IsChecked="True"
                     Margin="0,0,0,15"/>

            <!-- Password Strength -->
            <TextBlock Text="Password Strength" FontWeight="SemiBold" Margin="0,0,0,8"/>
            <ProgressBar x:Name="StrengthBar" 
                        Height="10" 
                        Minimum="0" 
                        Maximum="100"
                        Margin="0,0,0,5"/>
            <TextBlock x:Name="StrengthText" 
                      FontSize="12"
                      Margin="0,0,0,15"/>

            <!-- Buttons -->
            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" 
                       Content="Regenerate" 
                       Style="{StaticResource SecondaryButton}"
                       Click="RegenerateButton_Click"/>
                <Button Grid.Column="2" 
                       Content="Copy" 
                       Style="{StaticResource SecondaryButton}"
                       Click="CopyButton_Click"/>
                <Button Grid.Column="4" 
                       Content="Use Password" 
                       Style="{StaticResource PrimaryButton}"
                       Click="UsePasswordButton_Click"/>
            </Grid>
        </StackPanel>
    </Border>
</Window>
