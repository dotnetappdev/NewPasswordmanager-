<Window x:Class="PasswordManager.UI.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Password Manager â€“ Sign In"
        Height="480" Width="420"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">

    <Grid>
        <!-- Login form (centered card) -->
        <Border VerticalAlignment="Center" HorizontalAlignment="Center"
                Width="360"
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="12"
                Padding="32,28">
            <StackPanel>
                <!-- Lock icon + branding -->
                <TextBlock Text="ðŸ”" FontSize="48"
                           HorizontalAlignment="Center" Margin="0,0,0,8"/>
                <TextBlock Text="Password Manager"
                           FontSize="20" FontWeight="Bold"
                           Foreground="{StaticResource TextBrush}"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Secure. Simple. Modern."
                           FontSize="13"
                           Foreground="{StaticResource SecondaryBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,4,0,24"/>

                <!-- Account -->
                <TextBlock Text="Account"
                           FontSize="12" FontWeight="SemiBold"
                           Foreground="{StaticResource SecondaryBrush}"
                           Margin="0,0,0,6"/>
                <ComboBox x:Name="UserComboBox"
                          Style="{StaticResource ModernComboBox}"
                          DisplayMemberPath="Username"
                          Margin="0,0,0,16"/>

                <!-- Password -->
                <TextBlock Text="Password"
                           FontSize="12" FontWeight="SemiBold"
                           Foreground="{StaticResource SecondaryBrush}"
                           Margin="0,0,0,6"/>
                <PasswordBox x:Name="PasswordBox"
                             Style="{StaticResource ModernPasswordBox}"
                             Margin="0,0,0,8"/>

                <Button Content="Use Master Key"
                        Style="{StaticResource IconButton}"
                        Click="UseMasterKey_Click"
                        HorizontalAlignment="Left"
                        Padding="0,4"
                        Foreground="{StaticResource AccentBrush}"
                        Margin="0,0,0,16"/>

                <!-- Error -->
                <TextBlock x:Name="ErrorText"
                           Foreground="{StaticResource DangerBrush}"
                           TextWrapping="Wrap"
                           Margin="0,0,0,16"
                           Visibility="Collapsed"/>

                <!-- Sign In -->
                <Button Content="Sign In"
                        Style="{StaticResource PrimaryButton}"
                        Click="LoginButton_Click"
                        HorizontalAlignment="Stretch"
                        Margin="0,0,0,10"/>

                <!-- Create account -->
                <Button x:Name="CreateAccountButton"
                        Content="Create New Account"
                        Style="{StaticResource SecondaryButton}"
                        Click="CreateAccountButton_Click"
                        HorizontalAlignment="Stretch"/>
            </StackPanel>
        </Border>

        <!-- Create-account overlay -->
        <Border x:Name="CreateAccountOverlay"
                Background="#CC000000"
                Visibility="Collapsed">
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          MaxHeight="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Window}}">
                <ContentControl x:Name="CreateAccountHost"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="0,20"/>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
