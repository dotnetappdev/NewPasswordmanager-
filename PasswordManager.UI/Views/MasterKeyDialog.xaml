<Window x:Class="PasswordManager.UI.Views.MasterKeyDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Unlock Password Manager" Height="340" Width="480" WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}"
        ResizeMode="NoResize">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="340">

            <!-- Lock icon -->
            <TextBlock Text="ðŸ”" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16"/>

            <TextBlock Text="Password Manager" 
                       FontSize="22" FontWeight="Bold"
                       Foreground="{StaticResource TextBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,6"/>

            <TextBlock Text="Enter your master key to unlock" 
                       FontSize="13"
                       Foreground="{StaticResource SecondaryBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,24"/>

            <!-- Master Key input -->
            <PasswordBox x:Name="MasterKeyBox" 
                         Style="{StaticResource ModernPasswordBox}"
                         Margin="0,0,0,8"/>

            <!-- Error Message -->
            <TextBlock x:Name="ErrorText"
                       Foreground="{StaticResource DangerBrush}"
                       FontSize="12"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,12"
                       Visibility="Collapsed"/>

            <!-- Unlock button -->
            <Button Content="Unlock" 
                    Style="{StaticResource PrimaryButton}"
                    Click="Unlock_Click"
                    Height="40"
                    Margin="0,0,0,12"/>

            <!-- Cancel link-style button -->
            <Button Content="Cancel" 
                    Style="{StaticResource IconButton}"
                    Click="Cancel_Click"
                    HorizontalAlignment="Center"
                    Foreground="{StaticResource SecondaryBrush}"/>
        </StackPanel>
    </Grid>
</Window>
