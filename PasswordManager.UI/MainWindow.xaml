<Window x:Class="PasswordManager.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Password Manager"
        Height="720" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- Column 0 â€“ Sidebar                        -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Grid Grid.Column="0" Background="{StaticResource SidebarBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Logo + app name -->
            <StackPanel Grid.Row="0" Margin="16,20,16,8">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                    <TextBlock Text="ðŸ”" FontSize="22" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock Text="Password Manager"
                               FontSize="14" FontWeight="Bold"
                               Foreground="{StaticResource TextBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock x:Name="UserNameText"
                           FontSize="12"
                           Foreground="{StaticResource SecondaryBrush}"
                           TextTrimming="CharacterEllipsis"
                           Margin="0,2,0,0"/>
            </StackPanel>

            <!-- Divider -->
            <Border Grid.Row="0" Height="1" VerticalAlignment="Bottom"
                    Background="{StaticResource BorderBrush}" Margin="0,80,0,0"/>

            <!-- Nav items + vaults -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="8,12,8,0">

                    <!-- Navigation -->
                    <Button x:Name="AllItemsNavButton"
                            Content="ðŸ“‹  All Items"
                            Style="{StaticResource SidebarNavItem}"
                            HorizontalAlignment="Stretch"
                            Margin="0,2"
                            Click="AllItemsNavButton_Click"/>
                    <Button x:Name="FavoritesNavButton"
                            Content="â­  Favorites"
                            Style="{StaticResource SidebarNavItem}"
                            HorizontalAlignment="Stretch"
                            Margin="0,2"
                            Click="FavoritesNavButton_Click"/>
                    <Button x:Name="WatchtowerNavButton"
                            Content="ðŸ°  Watchtower"
                            Style="{StaticResource SidebarNavItem}"
                            HorizontalAlignment="Stretch"
                            Margin="0,2"/>

                    <!-- PRIVATE VAULTS section -->
                    <TextBlock Text="PRIVATE VAULTS"
                               Style="{StaticResource SidebarSectionHeader}"/>

                    <ListBox x:Name="VaultsListBox"
                             BorderThickness="0"
                             Background="Transparent"
                             Foreground="{StaticResource TextBrush}"
                             ItemContainerStyle="{StaticResource VaultListBoxItem}"
                             SelectionChanged="VaultsListBox_SelectionChanged"
                             Margin="0,4,0,0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}"
                                           FontSize="13"
                                           Foreground="{StaticResource TextBrush}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Button Content="ï¼‹  New Vault"
                            Style="{StaticResource SidebarNavItem}"
                            HorizontalAlignment="Stretch"
                            Margin="0,4"
                            Click="NewVaultButton_Click"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Bottom: New Entry + Settings + Logout -->
            <StackPanel Grid.Row="2" Margin="8,0,8,16">
                <Border Height="1" Background="{StaticResource BorderBrush}" Margin="4,0,4,10"/>
                <Button Content="ï¼‹  New Entry"
                        Style="{StaticResource PrimaryButton}"
                        HorizontalAlignment="Stretch"
                        Click="NewEntryButton_Click"
                        Margin="0,0,0,6"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="âš™ Settings"
                            Style="{StaticResource IconButton}"
                            Click="SettingsButton_Click"
                            Margin="0,0,8,0"/>
                    <Button Content="â» Logout"
                            Style="{StaticResource IconButton}"
                            Click="LogoutButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- Column 1 â€“ Item list pane                  -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Grid Grid.Column="1" Background="{StaticResource ListPaneBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- List pane header -->
            <Grid Grid.Row="0" Margin="16,16,16,8">
                <TextBlock x:Name="ListPaneTitle"
                           Text="All Items"
                           FontSize="16" FontWeight="Bold"
                           Foreground="{StaticResource TextBrush}"
                           VerticalAlignment="Center"/>
            </Grid>

            <!-- Search bar -->
            <Border Grid.Row="1"
                    Background="{StaticResource SurfaceBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Margin="12,0,12,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="ðŸ”"
                               FontSize="14" VerticalAlignment="Center"
                               Margin="10,0,6,0"
                               Foreground="{StaticResource SecondaryBrush}"/>
                    <TextBox x:Name="SearchBox"
                             Grid.Column="1"
                             BorderThickness="0"
                             Background="Transparent"
                             Foreground="{StaticResource TextBrush}"
                             CaretBrush="{StaticResource TextBrush}"
                             Padding="0,10,10,10"
                             FontSize="13"
                             TextChanged="SearchBox_TextChanged"
                             VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1"
                               Text="Searchâ€¦"
                               FontSize="13"
                               Foreground="{StaticResource SecondaryBrush}"
                               Padding="0,10,10,10"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=SearchBox, Path=Text}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Border>

            <!-- Category filter row -->
            <ScrollViewer Grid.Row="2" HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Disabled"
                          Margin="12,0,12,8">
                <StackPanel Orientation="Horizontal">
                    <Button Content="All"          Click="FilterAll_Click"        Style="{StaticResource SecondaryButton}" Padding="10,5" FontSize="12" Margin="0,0,4,0"/>
                    <Button Content="Login"        Click="FilterLogin_Click"      Style="{StaticResource SecondaryButton}" Padding="10,5" FontSize="12" Margin="0,0,4,0"/>
                    <Button Content="Card"         Click="FilterCreditCard_Click" Style="{StaticResource SecondaryButton}" Padding="10,5" FontSize="12" Margin="0,0,4,0"/>
                    <Button Content="Notes"        Click="FilterNotes_Click"      Style="{StaticResource SecondaryButton}" Padding="10,5" FontSize="12" Margin="0,0,4,0"/>
                    <Button Content="Files"        Click="FilterFiles_Click"      Style="{StaticResource SecondaryButton}" Padding="10,5" FontSize="12" Margin="0,0,4,0"/>
                    <Button Content="Passkeys"     Click="FilterPasskey_Click"    Style="{StaticResource SecondaryButton}" Padding="10,5" FontSize="12"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Entry list -->
            <Grid Grid.Row="3">
                <ListBox x:Name="EntriesListBox"
                         BorderThickness="0"
                         Background="Transparent"
                         ItemContainerStyle="{StaticResource EntryListBoxItem}"
                         SelectionChanged="EntriesListBox_SelectionChanged"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         VirtualizingPanel.IsVirtualizing="True">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="36"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="{Binding TypeIcon}"
                                           FontSize="20"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"/>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Title}"
                                               FontWeight="SemiBold"
                                               FontSize="13"
                                               Foreground="{StaticResource TextBrush}"
                                               TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding SubLabel}"
                                               FontSize="11"
                                               Foreground="{StaticResource SecondaryBrush}"
                                               TextTrimming="CharacterEllipsis"/>
                                </StackPanel>
                                <TextBlock Grid.Column="2"
                                           Text="â­"
                                           FontSize="11"
                                           VerticalAlignment="Center"
                                           Margin="4,0,0,0"
                                           Visibility="{Binding IsFavorite, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Empty state -->
                <TextBlock x:Name="NoItemsText"
                           Text="No items found"
                           FontSize="14"
                           Foreground="{StaticResource SecondaryBrush}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Visibility="Collapsed"/>
            </Grid>
        </Grid>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- Column 2 â€“ Detail pane                     -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Grid Grid.Column="2" Background="{StaticResource DetailPaneBrush}">

            <!-- No selection state -->
            <StackPanel x:Name="NoSelectionPanel"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                <TextBlock Text="ðŸ”’" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,12"/>
                <TextBlock Text="Select an item to view details"
                           FontSize="15"
                           Foreground="{StaticResource SecondaryBrush}"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Detail view -->
            <Grid x:Name="DetailPanel" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Detail header -->
                <Border Grid.Row="0"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,0,0,1"
                        Padding="24,20,24,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="DetailIconText"
                                   Grid.Column="0"
                                   Text="ðŸ”‘"
                                   FontSize="36"
                                   VerticalAlignment="Center"
                                   Margin="0,0,16,0"/>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock x:Name="DetailTitleText"
                                       FontSize="20" FontWeight="Bold"
                                       Foreground="{StaticResource TextBrush}"
                                       TextTrimming="CharacterEllipsis"/>
                            <TextBlock x:Name="DetailSubtitleText"
                                       FontSize="13"
                                       Foreground="{StaticResource SecondaryBrush}"
                                       TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                            <Button x:Name="EditButton"
                                    Content="âœ Edit"
                                    Style="{StaticResource PrimaryButton}"
                                    Padding="12,6"
                                    FontSize="13"
                                    Click="EditButton_Click"
                                    Margin="0,0,8,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Scrollable fields -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              Padding="24,16,24,0">
                    <StackPanel x:Name="DetailFieldsPanel" Margin="0,0,0,16"/>
                </ScrollViewer>

                <!-- Meta footer -->
                <Border Grid.Row="2"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,1,0,0"
                        Padding="24,12">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="DetailModifiedText"
                                   FontSize="11"
                                   Foreground="{StaticResource SecondaryBrush}"
                                   Margin="0,0,20,0"/>
                        <TextBlock x:Name="DetailCreatedText"
                                   FontSize="11"
                                   Foreground="{StaticResource SecondaryBrush}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
