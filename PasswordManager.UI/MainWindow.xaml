<Window x:Class="PasswordManager.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Password Manager" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}" 
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ”" FontSize="24" Margin="0,0,10,0"/>
                    <TextBlock Text="Password Manager" 
                              FontSize="20" 
                              FontWeight="Bold" 
                              VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="UserNameText" 
                              FontWeight="SemiBold" 
                              VerticalAlignment="Center"
                              Margin="0,0,15,0"/>
                    <Button Content="Settings" 
                           Style="{StaticResource SecondaryButton}"
                           Click="SettingsButton_Click"
                           Margin="0,0,10,0"/>
                    <Button Content="Logout" 
                           Style="{StaticResource SecondaryButton}"
                           Click="LogoutButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Border Grid.Column="0" Background="{StaticResource SurfaceBrush}"
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0"
                    Padding="15">
                <StackPanel>
                    <Button Content="+ New Entry" 
                           Style="{StaticResource PrimaryButton}"
                           Click="NewEntryButton_Click"
                           Margin="0,0,0,20"/>

                    <TextBlock Text="VAULTS" 
                              FontSize="12" 
                              FontWeight="Bold"
                              Foreground="{StaticResource SecondaryBrush}"
                              Margin="0,0,0,10"/>

                    <ListBox x:Name="VaultsListBox"
                            BorderThickness="0"
                            Background="Transparent"
                            SelectionChanged="VaultsListBox_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,5">
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding Description}" 
                                             FontSize="11" 
                                             Foreground="{StaticResource SecondaryBrush}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Button Content="+ New Vault" 
                           Style="{StaticResource SecondaryButton}"
                           Click="NewVaultButton_Click"
                           Margin="0,20,0,0"/>
                </StackPanel>
            </Border>

            <!-- Content Area -->
            <Grid Grid.Column="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Search Bar -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border Grid.Column="0" Grid.ColumnSpan="2"
                            Background="{StaticResource SurfaceBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="6">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Search Icon -->
                            <TextBlock Grid.Column="0" 
                                      Text="ðŸ”" 
                                      FontSize="16"
                                      VerticalAlignment="Center"
                                      Margin="12,0,8,0"
                                      Foreground="{StaticResource SecondaryBrush}"/>
                            
                            <!-- Search TextBox -->
                            <TextBox x:Name="SearchBox" 
                                    Grid.Column="1"
                                    BorderThickness="0"
                                    Background="Transparent"
                                    Padding="0,10,12,10"
                                    FontSize="14"
                                    TextChanged="SearchBox_TextChanged"
                                    VerticalAlignment="Center"/>
                            
                            <!-- Placeholder Text -->
                            <TextBlock Grid.Column="1"
                                      Text="Search passwords by title or username..."
                                      FontSize="14"
                                      Foreground="{StaticResource SecondaryBrush}"
                                      Padding="0,10,12,10"
                                      VerticalAlignment="Center"
                                      IsHitTestVisible="False">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=SearchBox, Path=Text}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Filter Buttons -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
                    <Button Content="All" Click="FilterAll_Click" Style="{StaticResource SecondaryButton}" Margin="0,0,10,0"/>
                    <Button Content="Login" Click="FilterLogin_Click" Style="{StaticResource SecondaryButton}" Margin="0,0,10,0"/>
                    <Button Content="Credit Card" Click="FilterCreditCard_Click" Style="{StaticResource SecondaryButton}" Margin="0,0,10,0"/>
                    <Button Content="Secure Notes" Click="FilterNotes_Click" Style="{StaticResource SecondaryButton}" Margin="0,0,10,0"/>
                    <Button Content="Files" Click="FilterFiles_Click" Style="{StaticResource SecondaryButton}"/>
                    <Button Content="Passkeys" Click="FilterPasskey_Click" Style="{StaticResource SecondaryButton}" Margin="0,0,0,0"/>
                </StackPanel>

                <!-- Entries List -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="EntriesItemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource Card}" Margin="0,0,0,15" Cursor="Hand" MouseLeftButtonDown="Entry_Click" Tag="{Binding}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="16"/>
                                            <TextBlock Text="{Binding Type}" Foreground="{StaticResource SecondaryBrush}" FontSize="12"/>
                                            <TextBlock Text="{Binding Username}" Foreground="{StaticResource SecondaryBrush}" Margin="0,5,0,0"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="â­" Visibility="{Binding IsFavorite, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</Window>

